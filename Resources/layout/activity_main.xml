<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inpute Values"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
    />

    <EditText
        android:id="@+id/incomePerHourEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:hint="Dollar per Hour"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
    />

    <EditText
        andorid:id="@+id/wordkHoursPerDayEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:hint="Work hours per day"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
    />

    <EditText
        andorid:id="@+id/taxRateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:hint="Tax rate (%)"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
    />

    <EditText
        andorid:id="@+id/savingRateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:hint="Savings rate (%)"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
    />

    <Button
        android:id="@+id/calculateButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        
        android:text="Calculate"
        
        android:layout_width="300dp"
        android:layout_height="50dp"
    />


</LinearLayout>
